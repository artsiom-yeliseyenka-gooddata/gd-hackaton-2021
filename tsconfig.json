{
    "compilerOptions": {
        "jsx": "preserve",
        "allowJs": true,
        "lib": ["es2016", "dom"],
        "target": "es2016",
        "module": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strictBindCallApply": true,
        "strictFunctionTypes": true,
        "baseUrl": "src",
        "paths": {
            "~components": ["./components"],
            "~components/*": ["./components/*"],
            "~pages": ["./pages"],
            "~pages/*": ["./pages/*"],
            "~css": ["./css"],
            "~css/*": ["./css/*"],
            "~icons": ["./icons"],
            "~icons/*": ["./icons/*"],
            "~images": ["./images"],
            "~images/*": ["./images/*"],
            "images": ["./images"],
            "images/*": ["./images/*"],
            "~styleGuide": ["./styleGuide"],
            "~styleGuide/*": ["./styleGuide/*"],
            "~constants": ["./constants"],
            "~constants/*": ["./constants/*"],
            "~utils": ["./utils"],
            "~utils/*": ["./utils/*"],
            "~contexts": ["./contexts"],
            "~contexts/*": ["./contexts/*"]
        }
    },
    "exclude": ["node_modules", "dist"]
}
